<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    	<!-- FEATURE BEGIN ARTISTS -->
    <Button
        android:id="@+id/btn_list_authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_database"
        android:text="@string/btn_list_authors" />
    <!-- FEATURE END ARTISTS -->

	<!-- FEATURE BEGIN PLAYLIST -->
    <Button
        android:id="@+id/btn_play_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_playlist"
        android:text="@string/btn_play_list" />
	<!-- FEATURE END PLAYLIST -->

	<!-- FEATURE BEGIN PLAYER_MUSIC -->    <Button
        android:id="@+id/btn_media_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_media_list" 
        android:drawableLeft="@drawable/video"
        />
    <!-- FEATURE END PLAYER_MUSIC -->
   

	<!-- FEATURE BEGIN SHARE -->
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/twitter"
        android:text="@string/btn_share" />
	<!-- FEATURE END SHARE -->
	
		<!-- FEATURE BEGIN SYNC -->
    <Button
        android:id="@+id/btn_synchronize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sync"
        android:text="@string/btn_synchronize" />
    <!-- FEATURE END SYNC -->
    
    
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_exit"
        android:text="@string/btn_exit" />

</LinearLayout>